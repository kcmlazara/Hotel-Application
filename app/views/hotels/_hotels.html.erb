<%= turbo_frame_tag "hotels" do %>
<div id="hotels" class="d-flex justify-content-around flex-wrap">
  <% @hotels.each do |hotel| %>
  <div>
    <%= render hotel %>
      <div>
        <%= link_to "Show this hotel", hotel, data: { turbo: false, turbo_action: "advance"}, class: "btn btn-secondary ml-2" %>
      </div>
  </div>
  <% end %>
</div>
<% end %>