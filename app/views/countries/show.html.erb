<p style="color: green"><%= notice %></p>

<%= render @country %>

<ul>
      <% @country.hotels.each do |hotel| %>
          <li><%= hotel.name %></li>
      <% end %>
</ul>

<div>
  <%= link_to "Edit this country", edit_country_path(@country), class: "btn btn-light" %> |
  <%= link_to "Back to countries", countries_path, class: "btn btn-light" %>

  <%= button_to "Destroy this country", @country, method: :delete, class: "btn btn-light text-danger" %>
</div>
